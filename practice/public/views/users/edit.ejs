<!DOCTYPE html>
<html>
  <head>
    <% include ../partials/head %>
  </head>
  <body>
    <% include ../partials/nav %>

    <div >

      <div >
        <a  href="/users/<%= username %>">Back</a>
      </div>

      <form  action="/users/<%= username %>?_method=put" method="post">
        <div >
          <h3 >Edit User</h3>
          <fieldset>
            <div  <%= (errors.currentPassword)?'has-error':'' %>">
              <label for="currentPassword" >Current Password*</label>
              <div >
                <input  type="password" id="currentPassword" name="currentPassword" value="">
                <% if(errors.currentPassword){ %>
                  <span ><%= errors.currentPassword.message %></span>
                <% } %>
              </div>
            </div>
            <hr></hr>
            <div  <%= (errors.username)?'has-error':'' %>">
              <label for="username" >Username*</label>
              <div >
                <input  type="text" id="username" name="username" value="<%= user.username %>">
                <% if(errors.username){ %>
                  <span><%= errors.username.message %></span>
                <% } %>
              </div>
            </div>
            <div  <%= (errors.name)?'has-error':'' %>">
              <label for="name" >Name*</label>
              <div >
                <input type="text" id="name" name="name" value="<%= user.name %>">
                <% if(errors.name){ %>
                  <span ><%= errors.name.message %></span>
                <% } %>
              </div>
            </div>
            <div  <%= (errors.email)?'has-error':'' %>">
              <label for="email" >Email</label>
              <div >
                <input  type="text" id="email" name="email" value="<%= user.email %>">
                <% if(errors.email){ %>
                  <span ><%= errors.email.message %></span>
                <% } %>
              </div>
            </div>
            <div <%= (errors.newPassword)?'has-error':'' %>">
              <label for="newPassword" >New Password</label>
              <div >
                <input  type="password" id="newPassword" name="newPassword" value="">
                <% if(errors.newPassword){ %>
                  <span ><%= errors.newPassword.message %></span>
                <% } %>
              </div>
            </div>
            <div <%= (errors.passwordConfirmation)?'has-error':'' %>">
              <label for="passwordConfirmation" >Password Confirmation</label>
              <div >
                <input  type="password" id="passwordConfirmation" name="passwordConfirmation" value="">
                <% if(errors.passwordConfirmation){ %>
                  <span ><%= errors.passwordConfirmation.message %></span>
                <% } %>
              </div>
            </div>
            <p>
              <small>*Required</small>
            </p>
          </fieldset>
        </div>
        <div >
          <button type="submit" class="btn btn-default">Submit</button>
        </div>
        <% if(errors.unhandled){ %>
          <div class="alert alert-danger">
            <%= errors.unhandled %>
          </div>
        <% } %>
      </form>

    </div> <!-- container end -->
  </body>
</html>
