<!-- views/posts/show.ejs -->
<!DOCTYPE html>
<html>
  <head>
    <% include ../partials/head %>
  </head>
  <body>
    <% include ../partials/nav %>

    <div>
      <% include ./partials/header %>

      <div>
        <a href="/registers">Back</a>
        <!-- 로그인이 된 상태이고, 게시물의 작성자 id(post.author.id)와 현재 로그인된 사용자의 id(currentUser.id)가 일치하는 경우에만 edit, delete을 보여줌 -->
        <% if(isAuthenticated && register.author && currentUser.id == register.author.id){ %>
          <a href="/registers/<%= register._id %>/edit">Edit</a>
          <form action="/registers/<%= register._id %>?_method=delete" method="post">
            <a href="#" onclick="confirm('Do you want to delete this?')?this.parentElement.submit():null;">Delete</a>
          </form>
        <% } %>
      </div>

      <div>
        <h3><%= register.title %></h3>
        <div>
          <div>
            <div>
              <div>
                <span>작성자</span> 
                : <%= register.author ? register.author.username : "" %>
              </div>
              
              <div>
                <span>작성일</span> 
                : <%= register.createdDate %> <%= register.createdTime %>
              </div>
              
              <!-- 이미지 삽입 -->
              <div>
                : <%= register.img %>
              </div>
              <div>
                <span> 마감일 </span>
                : <%= register.deadline %>
              </div>
              
              <% if(register.updatedAt) { %>
                <div>
                  <span>Updated</span> 
                  : <%= register.updatedDate %> <%= register.updatedTime %>
                </div>
              <% } %>

            </div> <!-- post-info end -->
          </div> <!-- col end-->
          <div>
            <div><%= register.body %></div>
          </div> <!-- col end-->
        </div> <!-- row end -->
      </div> <!-- post-container end -->

    </div> <!-- container end -->
  </body>
</html>
